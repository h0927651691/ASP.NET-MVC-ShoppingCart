@model List<ShoppingCarts.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>商品列表</h2>

<table class="table">
    <thead>
        <tr>
            <td>編號</td>
            <td>名稱</td>
            <td>描述</td>
            <td>售價</td>
            <td>庫存</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in this.Model) /*使用foreach將所有商品列出*/
        {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td>@product.Quantity</td>

        </tr>
        }
    </tbody>
</table>